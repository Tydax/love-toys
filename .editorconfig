root = true

[*]
insert_final_newline = true

[*.lua]
indent_style = space
indent_size = 3
max_line_length = 80
quote_type = double
trim_trailing_whitespace = true

# Use files' default in libraries
[**/libs/*.lua]
indent_style = unset
indent_size = unset
max_line_length = unset
quote_type = unset
trim_trailing_whitespace = unset
